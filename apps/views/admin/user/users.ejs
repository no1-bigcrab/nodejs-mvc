<!doctype html>
<html lang="en">
  <head>
    <title>Title</title>
    <!-- Required meta tags -->
    <%- include('../layout/header') %> 
  </head>
  <body>
      <div class="container">
        <%- include('../layout/nav') %> 

        <div class="panel panel-default border">
            <div class="panel-heading font-weight-bold p-2 bg-light">
               USERS
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Email</th>
                                <th>First name</th>
                                <th>Last name</th>
                                <th>Create time</th>
                                <th>Update time</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if(data && data.users) {%> 
                                <% for( var i = 0; i < data.users.length; i++ ) { %> 
                                    <tr>
                                        <td><%= data.users[i].id %> </td>
                                        <td><%= data.users[i].email %> </td>
                                        <td><%= data.users[i].first_name %> </td>
                                        <td><%= data.users[i].last_name %> </td>
                                        <td><%= data.users[i].created_at %> </td>
                                        <td><%= data.users[i].updated_at %> </td>
                                        <td>
                                            <a href="/admin/user/edit/<%= data.users[i].id %>" class="btn btn-primary"> Edit</a>
                                            <button class="btn btn-danger user_delete" user_id="<%= data.users[i].id %>">Delete</button>
                                        </td>
                                    </tr>
                                <% } %> 
                            <% } %> 
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
      </div>
    

    <%- include('../layout/footer')  %> 
  </body>
</html>