<!doctype html>
<html lang="en">
  <head>
    <title>Title</title>
    <!-- Required meta tags -->
    <%- include('../layout/header') %> 
    <script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
    <script>tinymce.init({selector:'textarea'});</script>
  </head>
  <body>
    <div class="container">
        <%- include('../layout/nav') %> 
        <div class="col-lg-12 border mt-3">
          <div class="panel panel-default">
              <div class="panel-heading font-weight-bold p-3 bg-light pull-justify">
                  Basic Form Elements
              </div>
              <div class="panel-body pt-3">
                  <div class="row">
                      <div class="col-lg-6">
                        <% if( data && data.error){ %> 
                            <div class="alert alert-danger col-sm-12">
                                <%= data.error %> 
                            </div>
                        <% } %> 
                          <form role="form" method="" action="">
                            <input class="form-control id" name="id" type="hidden"
                            value="<% if( data && data.post ){ %> <%= data.post.id %><% } %> ">
                              <div class="form-group">
                                  <label class="">The Title:</label>
                                  
                                  <input class="form-control" id="title" name="title" placeholder="The Title"
                              value="<% if( data && data.post ){ %> <%= data.post.title %><% } %> ">
                              </div>
                              <div class="form-group">
                                  <label>The Content:</label>
                                  <textarea name="content" id="content" class="col-md-12 content" rows="10" placeholder="The content">
                                  <% if( data && data.post ){ %> <%= data.post.content %><% } %>  </textarea>
                              </div>
                              <div class="form-group">
                                <label>The Author:</label>
                                <input class="form-control" id="author" name="author" placeholder="The Author" 
                              value="<% if( data && data.post ){ %> <%= data.post.author %> <% } %> ">
                              </div>
                              <input type="button" value="Update" class="btn btn-success post_edit">
                          </form>
                      </div>
                      <!-- /.col-lg-6 (nested) -->
                  </div>
                  <!-- /.row (nested) -->
              </div>
              <!-- /.panel-body -->
          </div>
          <!-- /.panel -->
      </div>
    </div>
    <%- include('../layout/footer')  %> 
    <script type="text/javascript" src="/static/js/post.js"></script>
</body>
</html>