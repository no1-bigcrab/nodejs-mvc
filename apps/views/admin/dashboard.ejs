<!doctype html>
<html lang="en">
  <head>
    <title>Title</title>
    <!-- Required meta tags -->
    <%- include('layout/header') %> 
  </head>
  <body>
      <div class="container">
        <%- include('layout/nav') %> 

        <div class="row">
            <div class="col-md-12 mt-5 p-3">
                <a href="/admin/post/new" class="btn btn-success pull-right">Add New Post</a>
            </div>
        </div>
        <div class="panel panel-default border">
            <div class="panel-heading font-weight-bold p-2 bg-light">
               POSTS
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Title</th>
                                <th>Content</th>
                                <th>Author</th>
                                <th>Create time</th>
                                <th>Update time</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                                <% for( var i = 0; i < data.posts.length; i++ ) { %> 
                                    <tr>
                                        <td><%= data.posts[i].id %> </td>
                                        <td><%- data.posts[i].title %> </td>
                                        <td><%- data.posts[i].content %> </td>
                                        <td><%= data.posts[i].author %> </td>
                                        <td><%= data.posts[i].created_at %> </td>
                                        <td><%= data.posts[i].updated_at %> </td>
                                        <td>
                                            <a href="/admin/post/edit/<%= data.posts[i].id %>" class="btn btn-primary"> Edit</a>
                                            <button class="btn btn-danger post_delete" post_id="<%= data.posts[i].id %>">Delete</button>
                                        </td>
                                    </tr>
                                <% } %> 
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
      </div>
    

    <%- include('layout/footer')  %> 
    <script type="text/javascript" src="/static/js/post.js"></script>
  </body>
</html>